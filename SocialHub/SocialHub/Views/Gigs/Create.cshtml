@model GigViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>
<form method="post">
    <div class="form-group">
        @Html.LabelFor(a => a.Venue)
        @Html.TextBoxFor(a => a.Venue, new { @class = "form-control"})
        <span asp-validation-for="Venue"></span>
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Date)
        @Html.TextBoxFor(a => a.Date, new { @class = "form-control" })
        <span asp-validation-for="Date"></span>
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Time)
        @Html.TextBoxFor(a => a.Time, new { @class = "form-control" })
        <span asp-validation-for="Time"></span>
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.GenreId)
        @Html.DropDownListFor(a => a.GenreId, new SelectList(Model.Genres, "Id", "Name"), "", new { @class = "form-control" });
        <span asp-validation-for="GenreId"></span>
    </div>
    <button type="submit" value="Save" class="btn btn-primary">Save</button>
</form>
